@model Meal
@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MealID" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <div><span asp-validation-for="Category" class="text-danger"></span></div>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Course"></label>
            <div><span asp-validation-for="Course" class="text-danger"></span></div>
            <input asp-for="Course" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="checkbox">
            <label>
                <input asp-for="SugarFree" /> Sugar free
            </label>
        </div>
        <div class="checkbox">
            <label>
                <input asp-for="GlutenFree" /> Gluten free
            </label>
        </div>
        <div class="checkbox">
            <label>
                <input asp-for="SaltFree" /> Salt free
            </label>
        </div>
        <div class="form-group">
            <label asp-for="Day"></label>
            <div><span asp-validation-for="Day" class="text-danger"></span></div>
            <input asp-for="Day" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Image"></label>
            <div><span asp-validation-for="Image" class="text-danger"></span></div>
            <input asp-for="Image" class="form-control" />
        </div>

        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
